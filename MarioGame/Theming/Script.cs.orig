                        {
                            mario.ChangeToDeadState();
                        }
                    }
                }
                else
                {
                    enemy.boxColor = Color.Red;
                    mario.isCollidable = true;
                }
                enemy.Update(Viewport);

            }
            foreach (var item in _items)
            {
                if (collisionHandler.checkForCollision(mario, item))
                {
                    colliding = true;
                    item.boxColor = Color.Black;
